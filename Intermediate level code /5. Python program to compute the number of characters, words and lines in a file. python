filename = input("Enter file name: ")

with open(filename, "r") as f:
    data = f.read()

# Count characters
num_chars = len(data)

# Count words
words = data.split()
num_words = len(words)

# Count lines
with open(filename, "r") as f:
    lines = f.readlines()
num_lines = len(lines)

print("Number of characters:", num_chars)
print("Number of words:", num_words)
print("Number of lines:", num_lines)
